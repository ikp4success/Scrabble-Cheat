<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WordChecker_activity" >

    <com.sothree.slidinguppanel.SlidingUpPanelLayout
        android:id="@+id/sliding_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <AbsoluteLayout
            android:id="@+id/olute_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/Cream"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/errorTV2"
                android:layout_width="280dp"
                android:layout_height="61dp"
                android:layout_x="22dp"
                android:layout_y="240dp"
                android:textColor="#FF4444" />

            <EditText
                android:id="@+id/editText3"
                android:layout_width="256dp"
                android:layout_height="wrap_content"
                android:layout_x="24dp"
                android:layout_y="84dp"
                android:ems="10"
                android:hint="Letters go Here"
                android:inputType="text"
                android:maxLength="12"
                android:maxLines="1" 
                />

            <Button
                android:id="@+id/button3"
                android:layout_width="161dp"
                android:layout_height="65dp"
                android:layout_x="82dp"
                android:layout_y="302dp"
                android:text="Submit Letters" />
        </AbsoluteLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/Transparent"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tvP5"
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:gravity="center|bottom"
                android:textColor="@color/HoloDark"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/displaytv5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_x="34dp"
                android:layout_y="0dp"
                android:gravity="center|top"
                android:textColor="@color/HoloDark"
                android:textSize="19sp" />
        </LinearLayout>
    </com.sothree.slidinguppanel.SlidingUpPanelLayout>

</RelativeLayout>